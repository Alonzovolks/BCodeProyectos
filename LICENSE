
screen = turtle.Screen()
screen.bgcolor("black")
screen.title("Te amo Yazmin ‚ù§Ô∏è")

colors = ["red", "hotpink", "deeppink", "violet", "gold", "orange"]

def draw_heart(x, y, size, color):
    turtle.penup()
    turtle.goto(x, y)
    turtle.pendown()
    turtle.color(color)
    turtle.begin_fill()
    turtle.left(140)
    turtle.forward(size)
    for _ in range(200):
        turtle.right(1)
        turtle.forward(size * 0.01)
    turtle.left(120)
    for _ in range(200):
        turtle.right(1)
        turtle.forward(size * 0.01)
    turtle.forward(size)
    turtle.end_fill()
    turtle.setheading(0)

def draw_flower(x, y, size, color):
    turtle.penup()
    turtle.goto(x, y)
    turtle.setheading(0)
    turtle.pendown()
    turtle.color(color)
    turtle.begin_fill()
    for _ in range(6):
        turtle.circle(size, 60)
        turtle.left(120)
        turtle.circle(size, 60)
        turtle.left(60)
    turtle.end_fill()

turtle.speed(0)
for _ in range(20):
    x = random.randint(-300, 300)
    y = random.randint(-250, 250)
    size = random.randint(10, 30)
    if random.choice([True, False]):
        draw_heart(x, y, size, random.choice(colors))
    else:
        draw_flower(x, y, size, random.choice(colors))

turtle.penup()
turtle.goto(0, -280)
turtle.color("white")
turtle.write("Te amo Yazmin üíñ", align="center", font=("Arial", 28, "bold"))

turtle.hideturtle()
turtle.done()
